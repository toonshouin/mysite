		"@tailwindcss/postcss": "^4.0.13",
		"@tailwindcss/vite": "^4.0.13",
		"postcss": "^8.4.38",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"sass-embedded": "^1.85.1",
		"svelte": "^5.0.0",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^4.0.13",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
